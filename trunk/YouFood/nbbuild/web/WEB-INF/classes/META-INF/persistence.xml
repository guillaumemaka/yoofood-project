<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="YouFood-PU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>jdbc/YouFood</jta-data-source>
    <class>com.youfood.entity.Country</class>
    <class>com.youfood.entity.DinningRoom</class>
    <class>com.youfood.entity.Item</class>
    <class>com.youfood.entity.Menu</class>
    <class>com.youfood.entity.Order</class>
    <class>com.youfood.entity.Restaurant</class>
    <class>com.youfood.entity.TTable</class>
    <class>com.youfood.entity.User</class>
    <class>com.youfood.entity.Zone</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="both"/>
      <property name="eclipselink.application-location" value="/Users/guillaume/Desktop"/>
      <property name="hibernate.transaction.manager_lookup_class" value="org.apache.openejb.hibernate.TransactionManagerLookup"/>
    </properties>
  </persistence-unit>
</persistence>
